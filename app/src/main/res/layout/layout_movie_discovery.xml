<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    >


    <android.support.v7.widget.CardView
        android:layout_height="@dimen/poster_height"
        android:layout_width="@dimen/poster_width"
        android:id="@+id/cardView_movie_poster"
        >

        <ImageView
            android:layout_width="@dimen/poster_width"
            android:layout_height="@dimen/poster_image_height"
            android:id="@+id/imageView_movie_poster"/>

        <TextView
            android:id="@+id/textView_movie_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/poster_name_height"
            android:layout_gravity="bottom"
            android:textSize="@dimen/poster_name_textSize"
            android:padding="@dimen/poster_name_padding"
            android:gravity="center"
            android:textStyle="bold"
            />

    </android.support.v7.widget.CardView>


</RelativeLayout>

